// Prisma schema (SQLite) — Gestion Hôtel
// Documentation: https://www.prisma.io/docs

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Client {
  id           Int           @id @default(autoincrement())
  nom          String
  prenom       String
  adresse      String
  reservations Reservation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chambre {
  id           Int                  @id @default(autoincrement())
  numero       String               @unique
  telephone    String
  reservations ReservationChambre[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reservation {
  id        Int       @id @default(autoincrement())
  code      String    @unique
  clientId  Int
  client    Client    @relation(fields: [clientId], references: [id])
  etat      String    @default("EnCours")
  dateDebut DateTime
  dateFin   DateTime

  chambres ReservationChambre[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ReservationChambre {
  reservationId Int
  chambreId     Int

  reservation Reservation @relation(fields: [reservationId], references: [id])
  chambre     Chambre     @relation(fields: [chambreId], references: [id])

  @@id([reservationId, chambreId])
  @@index([chambreId])
}
